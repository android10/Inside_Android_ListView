<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.flipper.example.insidelist"
          android:versionCode="1"
          android:versionName="1.0">

  <uses-sdk
      android:minSdkVersion="12"
      android:targetSdkVersion="15"/>

  <application
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
    <activity
        android:name=".activity.InsideMainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name=".activity.InsideBaseListActivity"/>
    <activity android:name=".activity.NoRecycleActivity"/>
    <activity android:name=".activity.RecycleActivity"/>
    <activity android:name=".activity.ViewHolderActivity"/>
    <activity android:name=".activity.RecicleBitmapActivity"/>

    <activity android:name=".activity.InsideListViewAnimatedItems"
              android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>

	  <activity android:name=".activity.InsideListViewAnimatedItemsTransient"
	            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>

  </application>

</manifest>
